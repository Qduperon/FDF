#==============================================================================#
#                               // NAME \\                                     #
#==============================================================================#

NAME = fdf

#==============================================================================#
#                           //  SOURCES  \\                                    #
#==============================================================================#

SRCS = srcs/base_mlx.c \
	   srcs/coord.c \
	   srcs/draw.c \
	   srcs/main.c \
	   srcs/mlx_color.c \
	   srcs/tools.c \
	   srcs/vect_ab.c \
	   srcs/vect_crux.c \
	   srcs/vect_octant.c \
	   srcs/vect_octant2.c \

#==============================================================================#
#                             //  FLAGS  \\                                    #
#==============================================================================#

FLAGS = -Wall -Werror -Wextra -I./includes

#==============================================================================#
#                            //  OBJECTS \\                                    #
#==============================================================================#

OBJ = $(SRCS:.c=.o)

#==============================================================================#
#                            // COMPILATION \\                                 #
#==============================================================================#

all: $(NAME)

$(NAME): $(OBJ)
	make -C libft
	make -C minilibx_macos
	gcc -o $(NAME) $(FLAGS) $(OBJ) -lmlx -framework OpenGL -framework AppKit \
		-lft -L./libft -I./minilibx_macos/
	echo "Fdf done"

#==============================================================================#
#                              // DELETING \\                                  #
#==============================================================================#

clean:
	make clean -C libft
	rm -f $(OBJ)

fclean: clean
	make fclean -C libft
	make clean -C minilibx_macos
	rm -f $(NAME)

#==============================================================================#
#                             // RETRY \\                                      #
#==============================================================================#

re: fclean all

#==============================================================================#
#                             //   42   \\                                     #
#==============================================================================#

42: re
	./fdf maps/42.fdf

.PHONY : all clean fclean re
